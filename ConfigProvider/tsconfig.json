{
  "compilerOptions": {
    "outDir": "./build/",

    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",

    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,

    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": "src",
  },

  "include": [ "src/*" ],

  "exclude": [
    "node_modules",
    "build"
  ]
}