{
  "compilerOptions": {
    "outDir": "./build/",

    "sourceMap": true,
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,

    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,

    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": "src",
  },

  "include": [ "Parser/src", "Api/src", "SitesChecker/src", "SitesUpdater/src", "ConfigProvider/src" ],

  "exclude": [
    "node_modules"
  ]
}